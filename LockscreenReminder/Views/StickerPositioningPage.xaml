<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="LockscreenReminder.Views.StickerPositioningPage"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
    xmlns:tt="clr-namespace:LockscreenReminder.Effects">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid 
                Grid.Row="0"
                BackgroundColor="White">
                <skia:SKCanvasView 
                    x:Name="canvasView"
                    PaintSurface="OnCanvasViewPaintSurface" />
                <Grid.Effects>
                    <tt:TouchEffect 
                        Capture="True"
                        TouchAction="OnTouchEffectAction" />
                </Grid.Effects>
            </Grid>
            <Button
                Grid.Row="1"
                Text="Valider"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
